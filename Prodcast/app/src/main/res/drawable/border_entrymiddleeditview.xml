<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- Border -->
    <item android:bottom="2dp" android:right="2dp" android:top="2dp" android:left="2dp">
        <shape>
            <solid android:color="@color/entryBorder"></solid>
        </shape>
    </item>

    <!-- Body -->
    <item android:bottom="3dp"
        android:right="3dp">


        <shape>
            <solid android:color="@android:color/holo_green_dark"></solid>
        </shape>
    </item>
    <item><shape xmlns:android="http://schemas.android.com/apk/res/android" >
        <stroke
            android:width="1dp"
            android:color="@color/colorPrimaryDark" />

        <solid android:color="#ffffff" />

        <padding
            android:left="3dp"
            android:right="3dp"
            android:top="3dp"
            android:bottom="3dp"/>

        <corners android:radius="5dp" />
    </shape>
    </item>
</layer-list>