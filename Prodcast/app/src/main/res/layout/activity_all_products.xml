<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/linearmain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"

        android:layout_marginRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/rltextmain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/rlimagemain"
            android:layout_toRightOf="@+id/rlimagemain">

            <TextView
                android:id="@+id/productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="SAMASYS PVT LTD"
                android:textColor="#345904"
                android:textSize="23sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"

                android:text="Salt Lake City"
                android:textColor="#629a1e"
                android:textSize="20sp"
                android:layout_below="@+id/productName"
                android:layout_alignParentStart="true"
                android:layout_marginTop="13dp" />

            <TextView
                android:id="@+id/unitPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salt Lake City"
                android:textColor="#629a1e"
                android:textSize="20sp"
                android:layout_alignBaseline="@+id/id"
                android:layout_alignBottom="@+id/id"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/salesTax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salt Lake City"
                android:textColor="#629a1e"
                android:textSize="18sp"
                android:layout_below="@+id/id"
                android:layout_alignStart="@+id/id"
                android:layout_marginTop="18dp" />

            <TextView
                android:id="@+id/otherTax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salt Lake City"
                android:textColor="#629a1e"
                android:textSize="18sp"
                android:layout_marginEnd="40dp"
                android:layout_alignBaseline="@+id/salesTax"
                android:layout_alignBottom="@+id/salesTax"
                android:layout_alignEnd="@+id/unitPrice" />


        </RelativeLayout>


    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rldivider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#629a1e"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="130dp"
        android:layout_below="@+id/rlmain"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </RelativeLayout>
</RelativeLayout>



