<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/skipRegisteration"
                android:layout_width="100dp"
                android:layout_height="50dp"

                android:layout_marginLeft="260dp"
                android:layout_marginTop="20dp"
                android:textSize="36sp"
                android:gravity="end"
                android:textColor="@color/orange"

                android:text="SKIP" />

            <RelativeLayout
                android:id="@+id/mainlayoutreg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:background="@drawable/yellow_background">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="40dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">

                <EditText
                    android:id="@+id/firstName"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:hint="First Name"
                    android:inputType="text"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">

                 <EditText
                     android:id="@+id/latName"
                     android:layout_height="wrap_content"
                     android:layout_width="160dp"
                     android:hint="Last Name"
                     android:layout_marginLeft="180dp"
                     android:inputType="text"
                     android:layout_alignParentTop="true"
                     android:layout_centerHorizontal="true" />
                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="90dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">

                <EditText
                    android:id="@+id/emailAddress"
                    android:layout_height="wrap_content"
                    android:layout_width="160dp"
                    android:layout_marginLeft="5dp"
                    android:hint="Email Address"
                    android:inputType="text|textWebEmailAddress"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                         <EditText
                    android:id="@+id/billingAddress1"
                    android:inputType="text"
                    android:hint="Billing Address1"
                     android:layout_height="wrap_content"
                     android:layout_width="160dp"
                     android:layout_marginLeft="180dp"
                     android:layout_alignParentTop="true"
                     android:layout_centerHorizontal="true" />
                </android.support.design.widget.TextInputLayout>
                </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="140dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                <EditText
                    android:id="@+id/billingAddress2"
                    android:inputType="text"
                    android:hint="Billing Address2"
                    android:layout_height="wrap_content"
                    android:layout_width="160dp"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">

                <EditText
                    android:id="@+id/billingAddress3"
                    android:inputType="text"
                    android:hint="Billing Address3"
                    android:layout_height="wrap_content"
                    android:layout_width="160dp"
                    android:layout_marginLeft="180dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
                </android.support.design.widget.TextInputLayout>

                </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="190dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">

                <EditText
                    android:id="@+id/homePhoneNumber"
                    android:inputType="text"
                    android:hint="Home PhoneNumber"
                    android:layout_height="wrap_content"
                    android:layout_width="160dp"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">

                <EditText
                    android:id="@+id/city"
                    android:inputType="text"
                    android:hint="City"
                    android:layout_height="wrap_content"
                    android:layout_width="160dp"
                    android:layout_marginLeft="180dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="240dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">

                <EditText
                    android:id="@+id/state"
                    android:inputType="text"
                    android:layout_height="wrap_content"
                    android:layout_width="160dp"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentTop="true"
                    android:hint="State"
                    android:layout_centerHorizontal="true" />
                </android.support.design.widget.TextInputLayout>

                <Spinner
                    android:id="@+id/editCountry"
                    android:layout_width="160dp"
                    android:layout_height="40dp"

                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="180dp"
                    android:layout_marginRight="20dp"
                    android:visibility="visible"
                    android:hint="Country"/>

                </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="290dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">

                <EditText
                    android:id="@+id/postalCode"
                    android:layout_height="wrap_content"
                    android:layout_width="160dp"
                    android:layout_marginLeft="5dp"
                    android:hint="Postal Code"
                    android:inputType="text"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
                </android.support.design.widget.TextInputLayout>

                <CheckBox
                    android:id="@+id/smsAllowed"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginLeft="180dp"
                    android:checked="true"
                    android:hint="Sms Allowed"
					android:textSize="16dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="15dp" />

            </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/editReg13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="-150dp">

            <Button
                android:id="@+id/edit"
                android:text="Save"
                style="@style/submitButton"
                android:visibility="visible"
                android:layout_marginTop="20dp" />

            <Button
                android:id="@+id/reset"
                style="@style/submitButton"
                android:visibility="visible"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="200dp"
                android:hint="Reset"/>

            </RelativeLayout>

        </LinearLayout>

</RelativeLayout>