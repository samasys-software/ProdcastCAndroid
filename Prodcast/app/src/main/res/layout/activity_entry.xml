<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:id="@+id/reviewOrderHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

    <Button
        android:id="@+id/order"
        style="@style/submitButton"
        android:text="Submit Order"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"/>

    <Button

        android:id="@+id/backButton"
        style="@style/submitButton"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="Back"
        android:layout_alignParentRight="true"/>


    </LinearLayout>

    <LinearLayout android:id="@+id/reviewOrderValues"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" android:layout_below="@id/reviewOrderHeader"

        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="horizontal">
            <TextView android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="Sub Total :"
                android:gravity="right"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/totalSubTotal"
                android:layout_height="wrap_content"
                android:text="Test"
                android:gravity="left"
                android:layout_gravity="right"
                android:textSize="16sp"
                android:layout_marginTop="0dp"
                android:layout_width="0dp"
                android:textColor="@color/colorAccent"
                android:layout_weight="1"/>

            <TextView android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="Tax :"
                android:gravity="right"
                android:layout_weight="1"
                />


            <TextView
                android:id="@+id/totalTax"
                android:layout_height="wrap_content"
                android:text="Test"
                android:gravity="left"
                android:layout_gravity="right"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:textColor="@color/colorAccent"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="horizontal" >
            <TextView android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="Total :"
                android:gravity="right"
                android:layout_weight="3"
                />
            <TextView
                android:id="@+id/total"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="Test"
                android:gravity="left"
                android:textSize="16sp"

                android:textColor="@color/colorAccent"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reviewOrderValues"
        android:id="@+id/reviewOrderTableHeader"
        android:layout_marginTop="25dp"
        >

        <TextView
            android:id="@+id/productName"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_alignLeft="@+id/companyDetails"
            android:layout_below="@+id/companyDetails"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Item"
            android:background="@drawable/border_headerends"
            style="@style/TableHeader"
            />

        <TextView
            android:id="@+id/unitPrice"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="Price"
            android:background="@drawable/border_headermiddle"
            style="@style/TableHeader"
            />
        <TextView
            android:id="@+id/orderQuantity"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Qty"
            android:background="@drawable/border_headermiddle"
            style="@style/TableHeader"

            />
        <TextView
            android:id="@+id/subTotal"
            android:layout_width="0dp"
            android:layout_weight="0.75"
            android:layout_height="wrap_content"
            android:text="Sub Total"
            android:gravity="center"
            android:background="@drawable/border_headermiddle"
            style="@style/TableHeader"

            />

    </LinearLayout>



    <com.baoyz.swipemenulistview.SwipeMenuListView
        android:id="@+id/listofentries" android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reviewOrderTableHeader"
        android:dividerHeight="1dp"
        android:divider="@android:color/darker_gray"
        android:headerDividersEnabled="true"

        />





</RelativeLayout>
