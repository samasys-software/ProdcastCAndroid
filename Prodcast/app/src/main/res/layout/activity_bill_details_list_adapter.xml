    <businessObjects.font_design.NewTextView
        android:id="@+id/subTotal"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/border"
        android:gravity="right"
        android:padding="3dp"
        android:layout_weight="1"
        />




</LinearLayout>

