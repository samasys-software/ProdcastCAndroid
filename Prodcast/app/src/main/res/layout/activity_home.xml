<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/orderScreen">

            <ImageView
                android:id="@+id/orderIcon"
                android:layout_width="150sp"
                android:layout_height="96sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"

                android:layout_column="0"
                android:layout_marginStart="25sp"
                android:layout_marginTop="35sp"
                android:layout_row="0"
                app:srcCompat="@drawable/order_entry" />

            <TextView
                android:id="@+id/orderText"
                android:layout_width="150sp"
                android:layout_height="30sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorPrimaryDark"
                android:layout_column="0"
                android:gravity="center"
                android:layout_marginStart="25sp"
                android:layout_marginTop="140sp"
                android:textAllCaps="true"
                android:textSize="16dp"
                android:layout_row="0"
                android:text="Order Entry" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/changePasswordScreen">

            <ImageView
                android:id="@+id/changePasswordIcon"
                android:layout_width="150sp"
                android:layout_height="96sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_column="1"
                android:layout_marginStart="30sp"
                android:layout_marginTop="35sp"
                android:layout_row="0"
                app:srcCompat="@drawable/change_pwd" />

            <TextView
                android:id="@+id/changePasswordText"
                android:layout_width="150sp"
                android:layout_height="30sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorPrimaryDark"
                android:layout_column="1"
                android:gravity="center"
                android:layout_marginStart="30sp"
                android:layout_marginTop="140sp"
                android:layout_row="0"
                android:textAllCaps="true"
                android:textSize="16dp"
                android:text="Change Password" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/changeStoreScreen">

            <ImageView
                android:id="@+id/changeStoreIcon"
                android:layout_width="150sp"
                android:layout_height="96sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_column="2"
                android:layout_marginStart="25sp"
                android:layout_marginTop="200sp"
                android:layout_row="0"
                app:srcCompat="@drawable/distribution_icon" />

            <TextView
                android:id="@+id/changeStoreText"
                android:layout_width="150sp"
                android:layout_height="30sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorPrimaryDark"
                android:layout_column="2"
                android:layout_marginStart="25sp"
                android:layout_marginTop="300sp"
                android:layout_row="0"
                android:gravity="center"
                android:textAllCaps="true"
                android:textSize="16dp"
                android:text="Change Store" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/orderHistroyScreen">

            <ImageView
                android:id="@+id/orderHistroyIcon"
                android:layout_width="150sp"
                android:layout_height="96sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_column="2"
                android:layout_marginStart="30sp"
                android:layout_marginTop="200sp"
                android:layout_row="1"
                app:srcCompat="@drawable/report" />

            <TextView
                android:id="@+id/orderHistroyText"
                android:layout_width="150sp"
                android:layout_height="30sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:textColor="@color/colorPrimaryDark"
                android:layout_column="2"
                android:layout_marginStart="30sp"
                android:layout_marginTop="300sp"
                android:layout_row="1"
                android:gravity="center"
                android:textAllCaps="true"
                android:textSize="16dp"
                android:text="Order History" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/editRegistrationScreen">

            <ImageView
                android:id="@+id/editRegistrationIcon"
                android:layout_width="150sp"
                android:layout_height="96sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_column="1"
                android:layout_marginStart="120sp"
                android:layout_marginTop="360sp"
                android:layout_row="1"
                app:srcCompat="@drawable/editreg" />

            <TextView
                android:id="@+id/editRegistrationText"
                android:layout_width="150sp"
                android:layout_height="30sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorPrimaryDark"
                android:layout_column="1"
                android:layout_marginStart="120sp"
                android:layout_marginTop="460sp"
                android:layout_row="1"
                android:gravity="center"
                android:textAllCaps="true"
                android:textSize="16dp"
                android:text="Edit Registration" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>