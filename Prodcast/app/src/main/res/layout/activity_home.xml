<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="top"
            android:id="@+id/orderScreen">

            <ImageView
                android:id="@+id/orderIcon"
                android:layout_width="96dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/order_entry" />

            <TextView
                android:id="@+id/orderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:text="Order Entry" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="top"
            android:id="@+id/changePasswordScreen">

            <ImageView
                android:id="@+id/changePasswordIcon"
                android:layout_width="96dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/change_pwd" />

            <TextView
                android:id="@+id/changePasswordText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAllCaps="true"

                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:text="Change PIN" />



        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/changeStoreScreen"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/changeStoreIcon"
                android:layout_width="96dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/distribution_icon" />

            <TextView
                android:id="@+id/changeStoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:text="Change Store" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/orderHistroyScreen"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="1">


            <ImageView
                android:id="@+id/orderHistroyIcon"
                android:layout_width="96dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/report" />

            <TextView
                android:id="@+id/orderHistroyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:text="Order History" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/editRegistrationScreen">

            <ImageView
                android:id="@+id/editRegistrationIcon"
                android:layout_width="96dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/editreg" />

            <TextView
                android:id="@+id/editRegistrationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:text="Edit Registration" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>