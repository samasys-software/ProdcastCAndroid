<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ventruxinformatics.prodcast.OutstandingBillsActivity">

   <!-- <RelativeLayout
        android:id="@+id/rlseprator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/rlhead"
        android:layout_alignParentLeft="true"
        android:background="#629a1e"
        android:layout_alignParentStart="true">

    </RelativeLayout>

   --> <LinearLayout
        android:id="@+id/rloutbilltext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlseprator"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
    <TextView
        android:id="@+id/outstandingBillText"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="5"

        android:text="Outstanding"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_gravity="center|center_vertical"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/newOrderPin"
            android:layout_centerInParent="true"
            app:srcCompat="@android:drawable/ic_input_add"
            android:layout_gravity="center_horizontal"
            android:text="+"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rloutbillheaders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rloutbilltext"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:id="@+id/linearmain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp">

            <TextView
                android:id="@+id/billNo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.5"
                android:text="Bill#"
                style="@style/TableHeader"
                android:background="@drawable/border_headerends"/>

            <TextView
                android:text="Status"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/status"
                android:layout_weight="0.8"
                android:background="@drawable/border_headermiddle"
                style="@style/TableHeader"/>

            <TextView
                android:text="Bill Date"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/billDate"
                android:layout_weight="1"
                android:background="@drawable/border_headermiddle"
                style="@style/TableHeader"

                />
            <TextView
                android:text="Total($)"
                android:gravity="center"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/total"
                android:layout_weight="0.8"
                style="@style/TableHeader"
                android:background="@drawable/border_headermiddle"/>
            <TextView
                android:text="Balance($)"
                android:gravity="center"

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/outstandingBalance"
                style="@style/TableHeader"
                android:background="@drawable/border_headermiddle"/>


        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlwebviewmain"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:layout_below="@+id/rloutbillheaders"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ListView
            android:id="@+id/billsListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:divider="@null">

        </ListView>

    </RelativeLayout>


</RelativeLayout>