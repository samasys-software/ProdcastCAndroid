<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ventruxinformatics.prodcast.OutstandingBillsActivity">



    <RelativeLayout
        android:id="@+id/rlseprator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/rlhead"
        android:layout_alignParentLeft="true"
        android:background="#629a1e"
        android:layout_alignParentStart="true">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rloutbilltext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlseprator"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">


        <Button
            android:id="@+id/newOrderPin"
            style="@style/submitButton"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:text="New Order" />


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rloutbillheaders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rloutbilltext"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:id="@+id/linearmain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"

            android:layout_marginRight="5dp">

            <TextView
                android:id="@+id/billNo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.5"
                android:text="Bill#"

                android:textColor="@color/colorPrimaryDark"
                android:background="@drawable/border"
                android:textSize="16sp"
                android:textStyle="bold"
                />


            <TextView
                android:text="Status"
                android:gravity="center"


                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:id="@+id/status"
                android:layout_weight="0.8"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold"


                />
            <TextView
                android:text="Bill Date"
                android:gravity="center"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/billDate"
                android:layout_weight="1"
                android:textColor="@color/colorPrimaryDark"
                android:background="@drawable/border"
                android:textSize="16sp"
                android:textStyle="bold"


                />
            <TextView
                android:text="Total($)"
                android:gravity="center"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/total"
                android:layout_weight="0.8"
                android:textColor="@color/colorPrimaryDark"
                android:background="@drawable/border"
                android:textSize="16sp"
                android:textStyle="bold"

                />
            <TextView
                android:text="Balance($)"
                android:gravity="center"

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/outstandingBalance"
                android:textColor="@color/colorPrimaryDark"
                android:background="@drawable/border"
                android:textSize="16sp"
                android:textStyle="bold"

                />


        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlwebviewmain"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:layout_below="@+id/rloutbillheaders"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ListView
            android:id="@+id/billsListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" >

        </ListView>

    </RelativeLayout>


</RelativeLayout>